{
	"name": "media-library-api",
	"version": "1.0.0",
	"description": "Media Library API",
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"prebuild": "node update‑schema.mjs",
		"predev": "node update‑schema.mjs",
		"predb:studio": "node update‑schema.mjs",
		"predb:generate": "node update‑schema.mjs",
		"predb:migrate": "node update‑schema.mjs",
		"predb:push": "node update‑schema.mjs",
		"predb:clear": "node update‑schema.mjs",
		"predb:seed": "node update‑schema.mjs",
		"build": "tsc --noEmit && eslint . && rimraf dist && tsup",
		"dev": "nodemon",
		"start": "node dist/server.js",
		"format": "prettier --write .",
		"lint": "eslint .",
		"type-check": "tsc --noEmit",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:clear": "tsx src/databases/drizzle/clean.ts",
		"db:seed": "tsx src/seed/superSeeder.ts",
		"db:seed:users": "tsx src/seed/superSeeder.ts users",
		"db:seed:emails": "tsx src/seed/superSeeder.ts emails",
		"db:seed:clear": "tsx src/seed/superSeeder.ts clear",
		"db:reset": "npm run db:clear && npm run db:migrate && npm run db:seed",
		"destroy": "rimraf -g \"{node_modules,.next,.cache}\""
	},
	"keywords": [],
	"author": "",
	"license": "UNLICENSED",
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"**/*.{css,scss}": [
			"prettier --write"
		],
		"**/*.{json,md}": [
			"prettier --write"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"cloudinary": "^2.7.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"csrf-csrf": "^4.0.3",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"express": "^5.1.0",
		"express-rate-limit": "^8.0.1",
		"express-session": "^1.18.2",
		"handlebars": "^4.7.8",
		"helmet": "^8.1.0",
		"http-status-codes": "^2.3.0",
		"ip": "^2.0.1",
		"jiti": "^2.5.1",
		"multer": "^2.0.2",
		"nodemailer": "^7.0.5",
		"nodemon": "^3.1.10",
		"passport": "^0.7.0",
		"passport-google-oauth20": "^2.0.0",
		"passport-local": "^1.0.0",
		"pg": "^8.16.3",
		"picocolors": "^1.1.1",
		"zod": "^4.0.14"
	},
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/express-session": "^1.18.2",
		"@types/ip": "^1.1.3",
		"@types/lint-staged": "^13.3.0",
		"@types/multer": "^2.0.0",
		"@types/node": "^24.1.0",
		"@types/nodemailer": "^6.4.17",
		"@types/passport": "^1.0.17",
		"@types/passport-google-oauth20": "^2.0.16",
		"@types/passport-local": "^1.0.38",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^16.3.0",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0"
	}
}
